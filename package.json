{
  "name": "shadcn-uikit-monorepo",
  "version": "0.4.0",
  "description": "The Acronis UI Shadcn UI components library with color schemes and demos",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "husky": "pnpm run lint-staged && pnpm run lint:ts",
    "lint-staged": "lint-staged",
    "lint": "pnpm run -r lint",
    "lint:fix": "pnpm run -r lint:fix",
    "lint:ts": "pnpm run -r lint:ts",
    "prepare": "husky",
    "build": "pnpm -r build",
    "test": "pnpm -r test -- --watch=false",
    "release": "pnpm run release --workspaces",
    "type-check": "npm run type-check --workspaces --if-present"
  },
  "keywords": [
    "ui",
    "components",
    "shadcn",
    "react",
    "tailwind"
  ],
  "author": "Acronis International GmbH",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acronis/shadcn-uikit.git"
  },
  "bugs": {
    "url": "https://github.com/acronis/shadcn-uikit/issues"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.2",
    "@commitlint/config-conventional": "20.4.2",
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "globals": "^17.3.0",
    "husky": "9.1.7",
    "lint-staged": "16.3.0",
    "prettier": "3.8.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.56.1",
    "eslint": "^10.0.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-storybook": "10.2.13",
    "eslint-plugin-unused-imports": "^4.4.1"
  },
  "lint-staged": {
    "packages/**/*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix"
    ],
    "packages/**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.27.0"
}
